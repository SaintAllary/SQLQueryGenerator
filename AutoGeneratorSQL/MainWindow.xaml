<Window x:Class="AutoGeneratorSQL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoGeneratorSQL"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="SQL Data generator" Height="570" Width="870" MinWidth="870" MinHeight="550" ResizeMode="CanResizeWithGrip" WindowStyle="None" MouseDown="Window_MouseDown">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="1.5*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions></Grid.RowDefinitions>

        <GroupBox Style="{DynamicResource MaterialDesignCardGroupBox}" Grid.Column="0"  Margin="5" Height="170" Padding="0" HorizontalAlignment="Stretch" VerticalAlignment="Top"  Header="Timer setting">
            <GroupBox.HeaderTemplate>
                <DataTemplate>
                    <StackPanel
        Orientation="Horizontal">
                        <materialDesign:PackIcon
            Kind="Timer"
          Height="32"
          Width="32"
          VerticalAlignment="Center" />
                        <TextBlock
          Margin="8,0,0,0"
          VerticalAlignment="Center"
  
          Text="{Binding}" />
                    </StackPanel>
                </DataTemplate>
            </GroupBox.HeaderTemplate>
            <Grid Margin="0,0,0,0">
                <Button  Style="{StaticResource MaterialDesignFlatButton}" Height="21" Margin="0,10,0,0"  HorizontalAlignment="Stretch" VerticalAlignment="Top" Padding="0" >Basic setting</Button>

                <TextBlock Foreground="{DynamicResource PrimaryHueMidBrush}" FontFamily="{DynamicResource MaterialDesignFont}"  Margin="10,10,0,10" Width="30" VerticalAlignment="Bottom" HorizontalAlignment="Left">State:</TextBlock>
                <TextBlock Width="70" FontSize="10" Name="TimerState" Margin="42,0,0,10"  VerticalAlignment="Bottom" HorizontalAlignment="Left" Foreground="DarkGray">Off</TextBlock>
                <TextBox  materialDesign:HintAssist.Hint="Time in miliseconds"  Height="23" Name="IntervalBox" Margin="10,50,10,10"  HorizontalAlignment="Stretch" VerticalAlignment="Top"  Text="{Binding TimerInterval}" TextChanged="IntervalBox_TextChanged"></TextBox>
                <Button Style="{StaticResource MaterialDesignFlatButton}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="20" Width="40" Padding="0" Margin="10" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Click="Button_Click">Start</Button>
                <Button Style="{StaticResource MaterialDesignFlatButton}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="20" Width="40" Padding="0" Margin="10,10,60,10" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Click="StopTimer" >Stop</Button>
            </Grid>
        </GroupBox>

      
        <GroupBox  Style="{DynamicResource MaterialDesignCardGroupBox}" x:Name="QueryGroup" Grid.ColumnSpan="2" Grid.Column="0"  Margin="5,180,5,5"  Padding="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  Header="Query Transcriptor">
            <GroupBox.HeaderTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="SqlQuery"  Height="32"  Width="32"   VerticalAlignment="Center" />
                        <TextBlock  Margin="8,0,0,0" VerticalAlignment="Center"   Text="{Binding}" />
                    </StackPanel>
                </DataTemplate>
            </GroupBox.HeaderTemplate>
            <Grid>
                <Button Style="{StaticResource MaterialDesignFlatButton}" Grid.Column="1" Grid.Row="1"  HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="20" Margin="0,5,5,0" Padding="0">Exit</Button>
                <TextBox x:Name="LogBox" x:FieldModifier="public" Width="250" Block.LineHeight="0.1"  HorizontalAlignment="Right" VerticalAlignment="Stretch"  Margin="550,230,0,20"></TextBox>
                <Grid HorizontalAlignment="Stretch" Margin="0,0,260,0" VerticalAlignment="Stretch">
                    <RichTextBox materialDesign:HintAssist.Hint="Your query" Name="QueryRTB"  VerticalAlignment="Top" HorizontalAlignment="Stretch" Height="25" Margin="10,10,0,0" TextChanged="RichTextBox_TextChanged" AcceptsReturn="False"></RichTextBox>
                    <TextBox  materialDesign:HintAssist.Hint="Output value" Name="OutPutBox" VerticalAlignment="Top" HorizontalAlignment="Stretch" Height="25" Margin="10,40,0,0"></TextBox>
                    <TextBox  TextWrapping="Wrap" Name="OutputHistory"  Margin="10,70,0,20" Block.LineHeight="0.1"></TextBox>


                    <TextBlock  Margin="10,0,0,4" Width="30" VerticalAlignment="Bottom" HorizontalAlignment="Left">State:</TextBlock>
                    <TextBlock Name="QueryState"  Width="110" FontSize="10" Margin="43,0,0,4"  VerticalAlignment="Bottom" HorizontalAlignment="Left" Foreground="DarkGray">Enabled</TextBlock>

                </Grid>
                <GroupBox Style="{DynamicResource MaterialDesignCardGroupBox}" Header="Modifiers" HorizontalAlignment="Right" VerticalAlignment="Top" Height="220" Margin="0,5,0,0" Width="250"  >
                    <Grid Margin="5" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="29*"/>
                            <RowDefinition Height="8*"/>
                        </Grid.RowDefinitions>
                        <CheckBox x:Name="HistoryCheck" Content="Log File" Margin="5,5,0,0" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" ></CheckBox>
                        <Button Style="{StaticResource MaterialDesignFlatButton}" Padding="0" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Margin="5,0,160,28" Click="Button_Click_3" Grid.RowSpan="2">Clear log</Button>
                        <Button  Style="{StaticResource MaterialDesignFlatButton}" Padding="0" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Margin="160,0,5,28" Click="Button_Click_2" Grid.RowSpan="2">Clear file</Button>
                        <Button  Style="{StaticResource MaterialDesignFlatButton}" Padding="0" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Margin="80,0,80,28" Click="GenerateCustom" Grid.RowSpan="2">Custom</Button>
                        <TextBox Name="SavePath" HorizontalAlignment="Stretch" Height="25" VerticalAlignment="Top" Margin="70,3,5,0" TextChanged="SetState" ></TextBox>
                        <Slider Name="SliderPercent" Value="100" Maximum="100" Minimum="0" TickFrequency="1" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="5,60,5,0" ValueChanged="WriteToLOG"></Slider>
                        <ToggleButton  HorizontalContentAlignment="Right" Name="QueryMode"  Margin="5,0,0,3" Height="15" HorizontalAlignment="Left" VerticalAlignment="Bottom" Click="CheckBox_Click" Grid.Row="1" ></ToggleButton>
                        <TextBlock  Margin="100,0,0,3" Width="30" VerticalAlignment="Bottom" HorizontalAlignment="Left" Grid.Row="1">State:</TextBlock>
                        <TextBlock Name="QuerySavePathState" Width="110" FontSize="10" Margin="135,0,-13,2"  VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Foreground="DarkGray" Grid.Row="1">Enabled</TextBlock>

                    </Grid>
                </GroupBox>
            </Grid>
        </GroupBox>


    </Grid>
</Window>
